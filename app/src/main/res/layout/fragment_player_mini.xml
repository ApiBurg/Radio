<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo_imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:contentDescription="@null"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp" />

    <ImageView
        android:id="@+id/player_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_control"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="139dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play" />

    <TextView
        android:id="@+id/player_playTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/player_control"
        android:layout_marginTop="6dp"
        android:textColor="#676767" />

    <TextView
        android:id="@+id/textView_current_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="21dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#676767"
        android:textSize="14sp"
        android:layout_below="@id/player_playTime"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/player_buttonLive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Трансляции"
        android:paddingLeft="47dp"
        android:paddingRight="47dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@drawable/button_color"
        android:textSize="18sp"
        android:background="@drawable/button_main"
        android:layout_below="@id/textView_current_track"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/player_social_one"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_below="@id/player_buttonLive">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/player_info"
            android:layout_width="36.48dp"
            android:layout_height="36.48dp"
            android:layout_weight="1"
            android:layout_marginRight="61.44dp"
            android:src="@drawable/icon_info" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/player_vk"
            android:layout_width="36.48dp"
            android:layout_height="36.48dp"
            android:layout_weight="1"
            android:src="@drawable/vk"
            android:layout_marginRight="61.44dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/player_instagram"
            android:layout_width="36.48dp"
            android:layout_height="36.48dp"
            android:layout_weight="1"
            android:src="@drawable/instagram" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_social_two"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_below="@id/player_social_one">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/player_whatsapp"
                android:layout_width="36.48dp"
                android:layout_height="36.48dp"
                android:layout_weight="1"
                android:layout_marginRight="61.44dp"
                android:src="@drawable/whatsapp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/player_viber"
                android:layout_width="36.48dp"
                android:layout_height="36.48dp"
                android:layout_weight="1"
                android:src="@drawable/viber"
                android:layout_marginRight="61.44dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/player_telegram"
                android:layout_width="36.48dp"
                android:layout_height="36.48dp"
                android:layout_weight="1"
                android:src="@drawable/telegram" />

        </LinearLayout>

</RelativeLayout>